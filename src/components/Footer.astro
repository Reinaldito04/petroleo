  <script>
  // Función para animar el contador
function animateValue(id, start, end, duration) {
  var range = end - start;
  var current = start;
  var increment = end > start ? 1 : -1;
  var stepTime = Math.abs(Math.floor(duration / range));
  var obj = document.getElementById(id);
  var timer = setInterval(function () {
    current += increment;
    obj.textContent = current;
    if (current == end) {
      clearInterval(timer);
    }
  }, stepTime);
}

// Función para manejar la intersección
function handleIntersection(entries) {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      animateValue("counter2", 0, 120, 3000);
      animateValue("counter0", 0, 80, 3000);
      animateValue("counter3", 0, 250, 3000);
      observer.unobserve(entry.target);
    }
  });
}

// Creamos un observador de intersección
var observer = new IntersectionObserver(handleIntersection, { threshold: 0.5 });

// Obtenemos los elementos a observar
var targets = document.querySelectorAll(".counter");

// Observamos los elementos
targets.forEach(target => {
  observer.observe(target);
});
  </script>
